    <Card title="Frontend">
      <div
        slot="content"
        class="flex flex-wrap gap-4 [&>span]:flex [&>span]:flex-col [&>span]:items-center"
      >
        <span>
          <HTML5 />
          HTML
        </span>
        <span>
          <CSS />
          CSS
        </span>
        <span>
          <JavaScript />
          JavaScript
        </span>
        <span>
          <React />
          React
        </span>
        <span>
          <Tailwind />
          Tailwind
        </span>
        <span>
          <Figma />
          Figma
        </span>
      </div>
    </Card>
    <Card title="Backend">
      <div
        slot="content"
        class="flex flex-wrap gap-4 [&>span]:flex [&>span]:flex-col [&>span]:items-center"
      >
        <span>
          <Node />
          NodeJs
        </span>
        <span>
          <AstroIcon />
          Astro
        </span>
        <span>
          <Next />
          Next
