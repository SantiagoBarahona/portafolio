---
interface Props {
  class?: string
  href?: string
  style?: 'primary' | 'secondary'
}

const { class: className, style = 'primary', href } = Astro.props
const Component = href ? 'a' : 'button'
const styles: Record<string, string> = {
  primary:
    'bg-fuchsia-600/80 border border-solid border-white/20 hover:bg-fuchsia-600 text-white hover:shadow-white/20',
}

const currentStyle = styles[style]
---

<Component
  href={href}
  class:list={[
    className,
    currentStyle,
    'w-fit p-4 shadow-md shadow-transparent duration-100 transition-colors hover:ease-in ease-out cursor-pointer',
  ]}
>
  <slot />
</Component>
